# Generate the local user login (DB wide credential) You must login to the master DB first and create the local login 
# 

CREATE LOGIN local_hdadmin WITH password='!SuperSecratPassw3rd$';
go

# Create local db user for the master DB
# 

CREATE USER local_hdadmin FROM LOGIN local_hdadmin;
go


# Switch to DB that you wish to add the user to (DB_dvolutions)
#

CREATE USER local_hdadmin FROM LOGIN local_hdadmin;
go

# Grant user permissions
# 

EXEC sp_addrolemember 'db_datareader', 'local_hdadmin';
EXEC sp_addrolemember 'db_datawriter', 'local_hdadmin';
go 
